---
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Mail from "../icons/Mail.astro";
import Github from "../icons/Github.astro";
import Experience from "../components/Experience.astro";
import Work from "../icons/Work.astro";
import Education from "../components/Education.astro";
import Contact from "../components/Contact.astro";
import Phone from "../icons/Phone.astro";
---

<Layout title="Miguel Guerrero">
    <main>
        <section
            id="home"
            class="flex flex-col items-center w-full mx-auto lg:w-[740px] pt-44 pb-20">
            <div class="flex flex-col justify-start">
                <img class="rounded-full size-14" src="/profile.jpg" alt="" />
                <h1 class="text-white text-5xl font-bold py-4">
                    Hi! I'm Miguel
                </h1>
                <h2 class="text-xl text-wrap pb-4">
                    <span class="text-yellow-100/90">Software Developer</span> with
                    3+ years of working experience.<br />Based on <span
                        class="text-blue-200/90">Caracas Venezuela</span
                    >. Strong foundation in technical <br />skills and passion
                    for using <span class="text-red-200/90"
                        >Technology to Solve</span
                    > problems.
                </h2>
                <nav class="flex flex-row gap-4">
                    <a
                        class="flex bg-white/5 border border-white/10 py-2 px-2 rounded-full transition hover:scale-110 hover:bg-white/10"
                        href="https://www.linkedin.com/in/miguel-guerrero-52987615a/"
                        ><LinkedIn class="size-6" /><span class="px-1"
                            >LinkedIn</span
                        >
                    </a>
                    <a
                        class="flex bg-white/5 border border-white/10 py-2 px-2 rounded-full transition hover:scale-110 hover:bg-white/10"
                        href="https://github.com/miguelguerrerojs"
                        ><Github class="size-6" />
                        <span class="px-1">Github</span>
                    </a>
                    <a
                        class="flex bg-white/5 border border-white/10 py-2 px-2 rounded-full transition hover:scale-110 hover:bg-white/10"
                        href="https://www.linkedin.com/in/miguel-guerrero-52987615a/"
                        ><Mail class="size-6" />
                        <span class="px-1">miguel.dev.cloud@gmail.com</span>
                    </a>
                </nav>
            </div>
        </section>
        <section id="experience" class="w-full mx-auto lg:w-[520px]">
            <div class="flex items-center pb-4">
                <Work class="size-6" />
                <h2 class="text-3xl pl-1.5">Experience</h2>
            </div>
            <Experience />
        </section>
        <section id="education" class="w-full mx-auto lg:w-[575px]">
            <div class="flex pb-4">
                <Education />
            </div>
        </section>
        <section id="contact" class="w-full mx-auto lg:w-[660px]">
            <div class="flex pl-10 pb-4">
                <Phone class="ml-4 mt-1 size-7 mr-2" />
                <h2 class="pb-4 text-3xl">Contact</h2>
            </div>
            <Contact />
        </section>
    </main>
</Layout>
