                <li class="mb-10 ms-4">
                    <h3 class="text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
                        {experience.date}
                    </h3>
                    <p class="mt-2 text-lg text-yellow-100/90 ">
                        {experience.title}
                    </p>
                    <p class="mt-2 text-white/65 text-wrap">
                        {/* Use \n for line breaks */}
                        {experience.description
                            .split("\n")
                            .map((line, index) => (
                                <span>
                                    {line}
                                    <br />
                                </span>
                            ))}
                    </p>
                </li>
